{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@drizzle/db": [
        "../drizzle/src/db/index.ts"
      ],
      "@drizzle/db/*": [
        "../drizzle/src/db/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/*.js"
  ],
  "include": [
    "src/**/*"
  ]
}