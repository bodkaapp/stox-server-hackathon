{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@drizzle/*": ["./drizzle/src/*.ts"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*", "drizzle/src/**/*"]
}
